# Database Configuration
DATABASE_URL=your_postgresql_connection_string

# Session Secret (generate a random string)
SESSION_SECRET=your_session_secret_here

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
ADMIN_EMAIL=david.alpenidze@gmail.com
FROM_EMAIL=david.alpenidze@gmail.com

# Google Cloud Storage (if using object storage)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id
PRIVATE_OBJECT_DIR=.private
PUBLIC_OBJECT_SEARCH_PATHS=public

# Replit Auth (if using Replit authentication)
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your_domain.com
REPL_ID=your_repl_id

# PostgreSQL Direct Connection (alternative to DATABASE_URL)
PGHOST=your_db_host
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=your_db_name
