# Database Configuration
DATABASE_URL=your_postgresql_connection_string

# Session Secret (generate a random string)
SESSION_SECRET=your_session_secret_here

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
ADMIN_EMAIL=david.alpenidze@gmail.com
FROM_EMAIL=david.alpenidze@gmail.com

# Google Cloud Storage (REQUIRED for file uploads)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id
PRIVATE_OBJECT_DIR=.private
PUBLIC_OBJECT_SEARCH_PATHS=public

# Google Cloud Storage Credentials (REQUIRED)
# Get these from your GCS service account JSON key file
GOOGLE_PROJECT_ID=your_gcp_project_id
GOOGLE_CLIENT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_private_key_here\n-----END PRIVATE KEY-----\n"

# PostgreSQL Direct Connection (alternative to DATABASE_URL)
PGHOST=your_db_host
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=your_db_name
